<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.board.SearchActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/moment_darkBlack"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/toolbar_style2"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/searchSpinner"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:entries="@array/spinner_items"
                android:textSize="10sp"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:textAlignment="center"
                android:spinnerMode="dropdown"/>
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                app:queryHint="게시물 검색"
                android:textColorHint="@color/moment_lightGray"
                android:textSize="20sp"
                android:textColor="@color/moment_white"
                android:fontFamily="@font/uto_godic"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:background="@color/moment_darkBlack"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/moment_black">
        <ListView
            android:id="@+id/searchResultList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/moment_darkBlack"
            android:textColor="@color/moment_white"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/searchNoResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="검색결과가 없습니다."
            android:textSize="18sp"
            android:fontFamily="@font/uto_godic"
            android:textColor="@color/moment_white"
            android:gravity="center_vertical|center_horizontal"/>
            <LinearLayout
                android:id="@+id/searchRvLayout"
                android:visibility="gone"
                android:background="@color/moment_darkBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchListRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/items_board_cardviewlist"/>
            </LinearLayout>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomAppBar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bottom_nav_style"
        android:paddingTop="10dp"
        app:itemIconSize="30dp"
        app:itemIconTint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navi_bottom_item"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>